# AI Resume Builder Configuration

# Server Configuration
PORT=5000
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Application Mode
PREMIUM_MODE=true
DEBUG_MODE=false

# Database Configuration (Optional - for enhanced features)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_resume_builder

# Hugging Face API (Optional - for enhanced AI features)
HF_TOKEN=your_hugging_face_token_here

# Security
SESSION_SECRET=your_secure_session_secret_here

# File Storage
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# AI Model Configuration
DEFAULT_MODEL=microsoft/phi-1_5
FALLBACK_MODE=true

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your_analytics_key_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100